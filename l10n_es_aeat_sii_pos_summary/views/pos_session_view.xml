<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pos_session_sii_form" model="ir.ui.view">
        <field name="name">pos.session.sii.form</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form" />
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]" />
        <field name="arch" type="xml">
            <button name="action_pos_session_validate" position="after">
                <button
                    type="object"
                    name="send_sii"
                    string="Send SII"
                    attrs="{'invisible': ['|','|',('sii_enabled', '=', False), ('state', 'not in', ['closed']), ('sii_state','in',['sent'])]}"
                    class="oe_highlight"
                    groups="l10n_es_aeat.group_account_aeat"
                />
            </button>
            <xpath expr="//notebook" position="inside">
                <page
                    name="page_sii_result_general"
                    string="SII"
                    groups="l10n_es_aeat.group_account_aeat"
                >
                    <group>
                        <field name="sii_enabled" />
                        <field name="sii_state" />
                        <field
                            name="sii_send_failed"
                            attrs="{'invisible': [('sii_send_failed', '=', False)]}"
                        />
                            <field
                            name="sii_send_error"
                            attrs="{'invisible': [('sii_send_failed', '=', False)]}"
                        />
                        <field name="sii_csv" />
                        <button
                            type="object"
                            name="send_sii_modification"
                            string="Modification to SII"
                            class="oe_highlight"
                            attrs="{'invisible': [('sii_state', '!=', 'sent')]}"
                        />
                    </group>
                </page>
                <page
                    name="page_sii_result_technical"
                    string="SII Technical"
                    groups="base.group_no_one"
                >
                    <group>
                        <label for="sii_header_sent" />
                    </group>
                    <field name="sii_header_sent" />
                    <group>
                        <label for="sii_content_sent" />
                    </group>
                    <field name="sii_content_sent" />
                    <group>
                        <label for="sii_return" />
                    </group>
                    <field name="sii_return" />
                    <group string="Conector" name="group_sii_jobs">
                        <field
                            name="simplified_jobs_ids"
                            options="{'reload_on_button': true}"
                            nolabel="1"
                            readonly="1"
                            context="{'tree_view_ref': 'l10n_es_aeat_sii_oca.view_queue_job_sii'}"
                        />
                    </group>
                </page>
            </xpath>
        </field>
    </record>


    <record id="view_pos_session_sii_filter" model="ir.ui.view">
        <field name="name">pos.session.filter.sii</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_search" />
        <field name="arch" type="xml">
            <filter name="closing_date" position="after">
                <filter
                    name="sii_not_sent"
                    string="Not sent SII"
                    domain="[('sii_state', '!=', 'sent'), ('start_at', '>=', '2017-01-01')]"
                />
                <filter
                    name="sii_sent"
                    string="Sent SII"
                    domain="[('sii_state', '=', 'sent')]"
                />
            </filter>
        </field>
    </record>
</odoo>
