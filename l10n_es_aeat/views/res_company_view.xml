<odoo>
    <record id="view_company_aeat_form" model="ir.ui.view">
        <field name="name">res.company.aeat.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="aeat" string="AEAT">
                    <group>
                        <group name="aeat_config">
                            <field name="tax_agency_id" />
                            <field name="representative_vat" />
                        </group>
                    </group>
                    <separator name="aeat_aeat_config" string="AEAT Configuration" />
                    <group name="aeat_enabled">
                        <field name="aeat_enabled" />
                    </group>
                    <group attrs="{'invisible': [('aeat_enabled', '=', False)]}">
                        <group name="aeat_config">
                            <field name="aeat_test" />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
